		"file-loader": "^6.2.0",
		"html-minifier-terser": "^5.1.1",
		"html-webpack-plugin": "^5.3.1",
		"mini-css-extract-plugin": "^1.3.9",
		"nodemon": "^2.0.7",
		"prettier": "^2.2.1",

{
	"name": "portfolio",
	"version": "1.0.0",
	"description": "Axel Gabriel Calle Granda's portfolio",
	"private": true,
	"author": "Axel Gabriel Calle Granda <97carmine@protonmail.com> (https://github.com/97carmine)",
	"license": "MIT",
	"repository": "github:97carmine/portfolio",
	"bugs": {
		"url": "https://github.com/97carmine/portfolio/issues"
	},
	"homepage": "https://github.com/97carmine/portfolio",
	"browserslist": [
		"defaults"
	],
	"scripts": {
		"extract:es": "formatjs extract './src/**/*.{js,jsx}' --out-file ./src/common/templates/messages/es.json",
		"extract:en": "formatjs extract './src/**/*.{js,jsx}' --out-file ./src/common/templates/messages/en.json",
		"compile:es": "formatjs compile ./src/common/templates/messages/es.json --ast --out-file ./src/common/languages/messages/es.json",
		"compile:en": "formatjs compile ./src/common/templates/messages/en.json --ast --out-file ./src/common/languages/messages/en.json",
		"build:prod": "rm -rf build && NODE_ENV=production webpack --config webpack.prod.js",
		"build:dev": "rm -rf build && NODE_ENV=development webpack --config webpack.dev.js",
		"start:prod": "node build/server.js",
		"start:dev": "nodemon build/server.js"
	},
	"dependencies": {
		"ajv": "^7.2.4",
		"body-parser": "^1.19.0",
		"bulma": "^0.9.2",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"helmet": "^4.4.1",
		"nodemailer": "^6.5.0",
		"prop-types": "^15.7.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-intl": "^5.14.0",
		"react-router": "^5.2.0",
		"react-router-dom": "^5.2.0",
		"react-transition-group": "^4.4.1",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@axe-core/react": "^4.1.1",
		"@babel/cli": "^7.13.10",
		"@babel/core": "^7.13.10",
		"@babel/eslint-parser": "^7.13.10",
		"@babel/plugin-transform-runtime": "^7.13.10",
		"@babel/preset-env": "^7.13.12",
		"@babel/preset-react": "^7.12.13",
		"@babel/runtime": "^7.13.10",
		"@formatjs/cli": "^4.0.0",
		"babel-loader": "^8.2.2",
		"babel-plugin-formatjs": "^10.0.0",
		"css-loader": "^5.2.0",
		"css-minimizer-webpack-plugin": "^1.3.0",
		"eslint": "^7.23.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-formatjs": "^2.12.9",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.23.1",
		"eslint-webpack-plugin": "^2.5.3",
		"favicons": "^6.2.1",
